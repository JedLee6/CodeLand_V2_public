<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearlayout_horizonalscrollview_item"
    android:gravity="center"
    >
    <ImageView
        android:id="@+id/image_horizonalscrollview"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />
    <!--添加文字后莫名其妙图片变小，只能自动设置 宽高-->
    <TextView
        android:id="@+id/textview_horizonalscrollview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_horizonalscrollview"
        android:layout_alignEnd="@+id/image_horizonalscrollview"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>
