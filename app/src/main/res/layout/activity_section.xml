<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#ffffff"
    tools:context=".bmob.SectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#6897ff">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="所有版块"
                android:fontFamily="@font/spellingfont"
                android:textColor="#e9efff"
                android:textSize="30sp" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp" />
            <ImageView
                android:layout_marginRight="20dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/logo_0413"
                android:layout_width="140dp"
                android:layout_height="40dp" />
        </LinearLayout>


        <GridView
            android:layout_margin="10dp"
            android:id="@+id/grid_view_section"
            android:columnWidth="500dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:verticalSpacing="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"

        android:background="#46a1d6">
        <EditText
            android:layout_margin="4dp"
            android:id="@+id/edit_text_section"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:lines="1"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:fontFamily="@font/spellingfont"
            android:background="@drawable/rec2"/>
        <Button
            android:layout_margin="4dp"
            android:layout_gravity="center"
            android:id="@+id/search_button"
            android:text="搜索"
            android:fontFamily="@font/spellingfont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rec3"/>
        <!--<Button-->
        <!--android:layout_margin="4dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:id="@+id/delete_section"-->
        <!--android:text="删除"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/rec3" />-->
    </LinearLayout>

</FrameLayout>