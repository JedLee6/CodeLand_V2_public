<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.redant.codeland.ui.BaseLevelActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/background_module"
        android:id="@+id/background_chapter"
        />

    <ImageView
        android:id="@+id/leaves_chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/leaves"
        android:layout_gravity="right|bottom"
        />

    <ImageView
        android:id="@+id/butterfly1_chapter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/flower"
        android:layout_gravity="left|center_vertical"
        />

    <ImageView
        android:id="@+id/butterfly2_chapter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@mipmap/butterfly1"
        android:layout_gravity="bottom"
        />
    <ImageView
        android:id="@+id/butterfly3_chapter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@mipmap/butterfly3"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            ></LinearLayout>
        <GridView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:layout_marginTop="10dp"
            android:numColumns="5"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            android:id="@+id/gridView_bae_level"
            android:gravity="center"
            />

    </LinearLayout>

    <com.redant.codeland.MyButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:background="@mipmap/icon_back"
        android:id="@+id/button_back_level"/>

</FrameLayout>
