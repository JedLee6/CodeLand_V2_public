    <FrameLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/code_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginTop="0dp" />
        <!--<com.redant.codeland.MyButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@mipmap/icon_back"
            android:id="@+id/button_back_coding"/>-->
        <com.redant.codeland.MyButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right|center_vertical"
            android:id="@+id/button_help_coding"
            android:background="@mipmap/icon_bulb"
            android:visibility="gone"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <com.redant.codeland.MyButton
            android:id="@+id/button_back_coding"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:visibility="invisible"
            android:background="@mipmap/icon_back" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="1dp" />


        <TextView
            android:layout_marginTop="0dp"
            android:id="@+id/mResultText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:alpha="0.7"
            android:background="@drawable/module_fillet_black"
            android:fadeScrollbars="false"
            android:gravity="center_horizontal"
            android:lines="3"
            android:maxLines="3"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/coding_test1"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:background="@mipmap/coding_button"
            android:text="保存" />

        <Button
            android:id="@+id/coding_test_ss"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:background="@mipmap/coding_button"
            android:text="加载 " />

    </LinearLayout>

    <include
        layout="@layout/record_event"
        android:visibility="gone"
        android:id="@+id/record_layout1"
        />



</FrameLayout>
