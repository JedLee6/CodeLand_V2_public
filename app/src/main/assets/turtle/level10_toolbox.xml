<toolbox>
    <category name="移动" colour="160">
    <block type="turtle_move_internal">
        <field name="VALUE">50</field>
        <field name="DIR">moveForward</field>
    </block>
    </category>
    <category name="旋转" color="120">
        <block type="turtle_turn_internal">
            <field name="VALUE">90</field>
        </block>
    </category>
    <category name="画笔" colour="120">
        <block type="turtle_pen">
            <field name="PEN">penUp</field>
        </block>
        <block type="turtle_visibility">
            <field name="VISIBILITY">hideTurtle</field>
        </block>
    </category>
    <category name="打印" colour="120">
         <block type="turtle_print">
            <value name="TEXT">
               <shadow type="text">
                <field name="TEXT">早教</field>
               </shadow>
            </value>
         </block>
        <block type="turtle_print">
            <value name="TEXT">
                <shadow type="text">
                    <field name="TEXT">Blockly</field>
                </shadow>
            </value>
        </block>
    </category>

</toolbox>